<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="CrossFire"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="35dp"
        android:textStyle="bold" />

        <RelativeLayout
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/app_title"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/prompt_user" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/login_name"
                android:hint="Username"
                android:layout_below="@+id/prompt_user"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/prompt_password"
                android:layout_below="@+id/login_name"
                android:layout_marginTop="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="textPassword"
                android:id="@+id/login_password"
                android:layout_below="@+id/prompt_password"
                android:hint="Password"/>

            <Button
                android:id="@+id/bn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/prompt_user"
                android:layout_below="@id/login_password"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                android:text="Login" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="No Account? Register Here"
                android:layout_below="@id/bn_login"
                android:id="@+id/bn_register"/>

        </RelativeLayout>

</RelativeLayout>