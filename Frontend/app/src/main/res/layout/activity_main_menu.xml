<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainMenuActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="24dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="CrossFire"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_title"
            android:paddingTop="24dp"
            android:text="Username: "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="249dp" />

        <Button
            android:id="@+id/bn_playerstats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="12dp"
            android:textSize="18dp"
            android:text="Player Stats" />

        <Button
            android:id="@+id/bn_achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_toRightOf="@id/bn_playerstats"
            android:layout_marginTop="48dp"
            android:layout_marginRight="12dp"
            android:text="Achievements"
            android:textSize="18dp" />

        <Button
            android:id="@+id/plyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bn_playerstats"
            android:layout_alignLeft="@+id/bn_playerstats"
            android:layout_alignRight="@id/bn_playerstats"
            android:layout_marginTop="24dp"
            android:textSize="18dp"
            android:text="Player List" />

        <Button
            android:id="@+id/bn_leaderboards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bn_achievement"
            android:layout_toRightOf="@+id/plyList"
            android:layout_alignLeft="@+id/bn_achievement"
            android:layout_alignRight="@id/bn_achievement"
            android:layout_marginTop="24dp"
            android:textSize="18dp"
            android:text="Leaderboards" />

        <Button
            android:id="@+id/bn_customization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plyList"
            android:layout_alignLeft="@+id/plyList"
            android:layout_alignRight="@id/plyList"
            android:layout_marginTop="24dp"
            android:textSize="14dp"
            android:text="Customization" />

        <Button
            android:id="@+id/bn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plyList"
            android:layout_alignLeft="@+id/bn_leaderboards"
            android:layout_alignRight="@id/bn_leaderboards"
            android:layout_marginTop="24dp"
            android:textSize="18dp"
            android:text="Settings" />

        <Button
            android:id="@+id/bn_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bn_customization"
            android:layout_alignLeft="@+id/bn_playerstats"
            android:layout_alignRight="@+id/bn_achievement"
            android:layout_marginTop="24dp"
            android:text="Play Game"
            android:textSize="18dp" />

        <Button
            android:id="@+id/bn_multi_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bn_game"
            android:layout_alignLeft="@+id/bn_playerstats"
            android:layout_alignRight="@+id/bn_achievement"
            android:layout_marginTop="24dp"
            android:text="Play Multiplayer Game"
            android:textSize="18dp" />

    </RelativeLayout>

</RelativeLayout>