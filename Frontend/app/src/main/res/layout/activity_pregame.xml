<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PregameActivity">

    <TextView
        android:id="@+id/pregame_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Game Options"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Turret: "
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_below="@+id/pregame_title"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/select_text"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:layout_below="@id/select_text"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Turret"
            android:textSize="24dp"
            android:checked="true"
            android:id="@+id/top_turret"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right Turret"
            android:textSize="24dp"
            android:id="@+id/right_turret"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom Turret"
            android:textSize="24dp"
            android:id="@+id/bottom_turret"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Turret"
            android:textSize="24dp"
            android:id="@+id/left_turret"/>
    </RadioGroup>

    <Button
        android:id="@+id/bn_startgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="Start Game"
        android:textSize="18dp" />

</RelativeLayout>