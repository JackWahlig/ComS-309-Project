<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameLobbyActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Lobby"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bn_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="24dp"
        android:text="Refresh Lobby"
        android:textSize="18dp" />

    <Button
        android:id="@+id/bn_force_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_refresh"
        android:layout_marginTop="24dp"
        android:text="Force Game Start"
        android:textSize="18dp" />
    <Button
        android:id="@+id/bn_leave_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_force_start"
        android:layout_marginTop="24dp"
        android:text="Leave Game"
        android:textSize="18dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game_info_list"
        android:layout_below="@id/bn_leave_game"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"></ListView>

</RelativeLayout>